[
  // Format current file with ESLint (JS/TS files)
  {
    "key": "ctrl+shift+f",
    "command": "eslint.executeAutofix",
    "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'javascriptreact' || editorLangId == 'typescript' || editorLangId == 'typescriptreact')"
  },
  // Format current file with Prettier (CSS/JSON/HTML/Markdown files)
  {
    "key": "ctrl+shift+f",
    "command": "editor.action.formatDocument",
    "when": "editorTextFocus && (editorLangId == 'css' || editorLangId == 'scss' || editorLangId == 'json' || editorLangId == 'jsonc' || editorLangId == 'html' || editorLangId == 'markdown' || editorLangId == 'yaml')"
  },
  // Quick fix ESLint issues
  {
    "key": "ctrl+shift+.",
    "command": "editor.action.quickFix",
    "when": "editorTextFocus && editorHasCodeActionsProvider"
  },
  // Organize imports (disabled by default, but available on demand)
  {
    "key": "ctrl+shift+o",
    "command": "editor.action.organizeImports",
    "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'javascriptreact' || editorLangId == 'typescript' || editorLangId == 'typescriptreact')"
  },
  // Format all files in workspace
  {
    "key": "ctrl+k ctrl+f",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "npm run format\n"
    }
  },
  // Run format check
  {
    "key": "ctrl+k ctrl+c",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "npm run format:check\n"
    }
  },
  // Toggle word wrap for long lines
  {
    "key": "alt+z",
    "command": "editor.action.toggleWordWrap"
  },
  // Quick ESLint check for current file
  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "npx eslint ${relativeFile} --fix\n"
    },
    "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'javascriptreact' || editorLangId == 'typescript' || editorLangId == 'typescriptreact')"
  },
  // Quick Prettier check for current file
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "npx prettier --write ${relativeFile}\n"
    },
    "when": "editorTextFocus && (editorLangId == 'css' || editorLangId == 'scss' || editorLangId == 'json' || editorLangId == 'jsonc' || editorLangId == 'html' || editorLangId == 'markdown' || editorLangId == 'yaml')"
  }
]
