      "type": "shell",
      "command": "npx",
      "args": ["prettier", "--write", "${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Prettier: Check Current File",
      "type": "shell",
